package fr.dawan.exercice_jpa.entities;

import java.io.Serializable;

import fr.dawan.exercice_jpa.enums.Base;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Lob;
import jakarta.persistence.SequenceGenerator;
import jakarta.persistence.Table;
import jakarta.persistence.Version;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Entity
@Table(name = "pizzas")

@AllArgsConstructor
@NoArgsConstructor
@Setter
@Getter
@ToString
@Builder
public class Pizza implements Serializable {

    private static final long serialVersionUID = -1830613944305469891L;

    @Id
    @GeneratedValue(strategy = GenerationType.SEQUENCE)
    @SequenceGenerator(name = "pizz_seq", initialValue = 1000, allocationSize = 30000)
    private long id;

    @Column(nullable = false)
    private String nom;

    @Enumerated
    @Column(nullable = false)
    private Base base;

    @Column(nullable = false)
    private double prix;

    @Column(nullable = true)
    @Lob
    private byte[] photo;

    @Version
    private LocalDateTime version;

}
