<?xml version="1.0" encoding="UTF-8"?>

<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="formationjpa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
        
            <!-- Configuration de la datasource -->
            <!-- Créer une base de données formationjpa et ajouter ici le nom d'utilisateur et et le mot de passe -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://planetnine:33065/formationjpa"/>
            <property name="jakarta.persistence.jdbc.user"
                      value=""/>
            <property name="jakarta.persistence.jdbc.password"
                      value=""/>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver"/>
            
            <!-- Config de l'ORM -->
            <property name="hibernate.hbm2ddl.auto" 
                      value="create"/>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.show_sql" 
                      value="true"/>
            <property name="hibernate.format_sql"
                      value="true"/>
        </properties>
    </persistence-unit>
</persistence>